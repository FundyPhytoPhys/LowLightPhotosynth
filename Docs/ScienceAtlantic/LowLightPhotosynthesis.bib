}

@article{deblois2013,
  title = {Comparison of {{Photoacclimation}} in {{Twelve Freshwater Photoautotrophs}} ({{Chlorophyte}}, {{Bacillaryophyte}}, {{Cryptophyte}} and {{Cyanophyte}}) {{Isolated}} from a {{Natural Community}}},
