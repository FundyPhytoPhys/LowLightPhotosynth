@article{jungandreas2014,
  title = {The {{Acclimation}} of {{Phaeodactylum}} Tricornutum to {{Blue}} and {{Red Light Does Not Influence}} the {{Photosynthetic Light Reaction}} but {{Strongly Disturbs}} the {{Carbon Allocation Pattern}}},
  author = {Jungandreas, Anne and Costa, Benjamin Schellenberger and Jakob, Torsten and von Bergen, Martin and Baumann, Sven and Wilhelm, Christian},
